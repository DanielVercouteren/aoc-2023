{
  "compilerOptions": {
    "lib": ["ESNext", "ES5", "ES6", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "downlevelIteration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/scripts/**/*"]
}
